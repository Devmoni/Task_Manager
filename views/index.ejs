<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Management</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Task Management</h1>
  <a href="/add">Add Task</a>
  <table>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Priority</th>
      <th>Due Date</th>
      <th>Actions</th>
    </tr>
    <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.dueDate %></td>
        <td>
          <a href="/edit/<%= task.id %>">Edit</a>
          <a href="/delete/<%= task.id %>">Delete</a>
        </td>
      </tr>
    <% }); %>
  </table>
</body>
</html>
